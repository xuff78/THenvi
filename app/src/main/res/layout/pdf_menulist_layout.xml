<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/appBackground"
        android:layout_width="match_parent"
        android:layout_height="45dip">
        <ImageView
            android:id="@+id/listLeftBtn"
            android:visibility="gone"
            android:src="@mipmap/icon_menu_list"
            android:background="@drawable/press_trans_to_gray"
            android:layout_width="45dip"
            android:padding="8dip"
            android:layout_height="45dip" />
        <TextView
            android:id="@+id/titleTxt"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:layout_centerInParent="true"
            style="@style/txt_white_15" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/selectLayout"
            android:background="@color/whitesmoke"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:layout_weight="4"
                android:cacheColorHint="@color/trans"
                android:scrollbars="none"
                android:id="@+id/areaList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ListView
                android:visibility="gone"
                android:background="@color/white"
                android:layout_weight="3"
                android:cacheColorHint="@color/trans"
                android:scrollbars="none"
                android:id="@+id/areaList2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>