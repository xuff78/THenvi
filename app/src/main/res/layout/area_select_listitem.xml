<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_width="match_parent" android:layout_height="40dip">
        <!--<TextView
            android:id="@+id/titleTxt"
            style="@style/txt_gray_12"
            android:text="题目" />-->
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrowRight"
            android:layout_marginRight="2dip"
            android:gravity="left"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nameTxt"
            style="@style/txt_black_12"
            android:text="" />
        <TextView
            android:visibility="gone"
            android:layout_below="@+id/nameTxt"
            android:layout_marginTop="2dip"
            style="@style/txt_gray_12"
            android:id="@+id/addrTxt"
            android:text="" />
        </LinearLayout>
        <ImageView
            android:id="@+id/arrowRight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_arrow_right"
            android:layout_width="25dip"
            android:layout_height="25dip" />
        <!--<View
            android:layout_alignParentRight="true"
            android:background="@color/light_gray"
            android:layout_width="1px"
            android:layout_height="match_parent"/>-->
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
