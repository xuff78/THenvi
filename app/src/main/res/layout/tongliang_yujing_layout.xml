<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/titleLayout"
            android:background="@color/appBackground"
            android:layout_width="match_parent"
            android:layout_height="45dip">
            <ImageView
                android:id="@+id/listLeftBtn"
                android:src="@mipmap/icon_menu_list"
                android:background="@drawable/press_trans_to_gray"
                android:layout_width="45dip"
                android:padding="8dip"
                android:layout_height="45dip" />
            <TextView
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:text="通量超标预警"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/typeBtn"
                android:layout_gravity="center"
                android:minWidth="100dip"
                android:background="@drawable/press_trans_to_gray"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:drawablePadding="3dip"
                android:drawableRight="@mipmap/icon_triangle"
                android:text="类型"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_alignParentRight="true"
                style="@style/txt_white_14" />
        </RelativeLayout>
    <com.baidu.mapapi.map.MapView
        android:layout_below="@+id/titleLayout"
        android:id="@+id/mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />
        <RelativeLayout
            android:layout_below="@+id/titleLayout"
            android:background="@color/normaltranswhite"
            android:layout_width="match_parent"
            android:layout_height="45dip">
            <LinearLayout
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/startDate"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@mipmap/of_white_btn"
                    android:layout_width="100dip"
                    android:layout_height="32dip" />
                <ImageView
                    android:textSize="14sp"
                    android:src="@mipmap/icon_arrow_right"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/endDate"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/startDate"
                    android:background="@mipmap/of_white_btn"
                    android:layout_width="100dip"
                    android:layout_height="32dip" />
            </LinearLayout>
            <TextView
                android:id="@+id/findOut"
                android:textSize="14sp"
                android:textColor="@color/hard_gray"
                android:text="查找"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_width="70dip"
                android:layout_height="match_parent" />
        </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:id="@+id/leftMenuView"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="35dip">
            <TextView
                android:text="省界"
                android:gravity="center"
                style="@style/txt_black_11"
                android:layout_width="60dip"
                android:layout_height="match_parent" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:text="断面名称"
                android:gravity="center"
                style="@style/txt_black_11"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:text="通量阈值(t/d)"
                android:gravity="center"
                style="@style/txt_black_11"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:text="超标通量(t/d)"
                android:gravity="center"
                style="@style/txt_black_11"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:text="超标倍数"
                android:gravity="center"
                style="@style/txt_black_11"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <ListView
            android:id="@+id/siteList"
            android:scrollbars="none"
            android:divider="@color/trans"
            android:dividerHeight="0px"
            android:cacheColorHint="@color/trans"
            android:layout_width="match_parent"
            android:layout_height="170dip"/>
        <RelativeLayout
            android:id="@+id/controlBottom"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:background="#008B8B"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="35dip">
            <LinearLayout
                android:layout_centerVertical="true"
                android:id="@+id/controlLayout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/playBtn"
                    android:padding="5dip"
                    android:layout_marginLeft="5dip"
                    android:src="@mipmap/map_icon_play"
                    android:layout_width="30dip"
                    android:layout_height="30dip" />
            </LinearLayout>
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_centerVertical="true"
                android:progress="0"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_toLeftOf="@+id/dateTxt"
                android:layout_toRightOf="@+id/controlLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dateTxt"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="8月28日"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
