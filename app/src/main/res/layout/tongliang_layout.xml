<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/titleLayout"
        android:background="@color/appBackground"
        android:layout_width="match_parent"
        android:layout_height="45dip">
        <ImageView
            android:id="@+id/listLeftBtn"
            android:src="@mipmap/icon_menu_list"
            android:background="@drawable/press_trans_to_gray"
            android:layout_width="45dip"
            android:padding="8dip"
            android:layout_height="45dip" />
        <TextView
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:text="区域通量"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_toLeftOf="@+id/findTypeBtn"
            android:background="@color/light_gray"
            android:layout_width="1px"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:id="@+id/findTypeBtn"
            android:layout_alignParentRight="true"
            android:text="区域通量"
            android:gravity="center"
            android:layout_width="80dip"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapView"
        android:layout_below="@+id/titleLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />
    <RelativeLayout
        android:layout_below="@+id/titleLayout"
        android:background="@color/normaltranswhite"
        android:layout_width="match_parent"
        android:layout_height="45dip">
        <LinearLayout
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/startDate"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@mipmap/of_white_btn"
            android:layout_width="100dip"
            android:layout_height="32dip" />
            <ImageView
                android:textSize="14sp"
                android:src="@mipmap/icon_arrow_right"
                android:gravity="center"
                android:layout_toRightOf="@+id/startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/endDate"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_toRightOf="@+id/startDate"
            android:background="@mipmap/of_white_btn"
            android:layout_width="100dip"
            android:layout_height="32dip" />
        </LinearLayout>
        <TextView
            android:id="@+id/findOut"
            android:textSize="14sp"
            android:textColor="@color/hard_gray"
            android:text="查找"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="70dip"
            android:layout_height="match_parent" />
    </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:id="@+id/leftMenuView"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="220dip">
            <LinearLayout
                android:padding="5dip"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dip">
                <TextView
                    android:text="省界"
                    android:gravity="center"
                    style="@style/txt_black_11"
                    android:layout_width="65dip"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="跨界区域"
                    android:gravity="center"
                    style="@style/txt_black_11"
                    android:layout_width="65dip"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="类型"
                    android:gravity="center"
                    style="@style/txt_black_11"
                    android:layout_width="40dip"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:text="COD(t)"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/txt_black_11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="NH3N(t)"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/txt_black_11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="TP(t)"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/txt_black_11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="TN(t)"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/txt_black_11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/light_gray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <ListView
                android:id="@+id/siteList"
                android:scrollbars="none"
                android:divider="@color/trans"
                android:dividerHeight="0px"
                android:cacheColorHint="@color/trans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
</RelativeLayout>
