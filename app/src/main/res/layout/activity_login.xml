<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:src="@mipmap/day_2"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/topLogo"
        android:background="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dip"
        android:layout_width="70dip"
        android:layout_height="70dip" />
    <LinearLayout
        android:id="@+id/edtLayout"
        android:layout_below="@+id/topLogo"
        android:background="@drawable/login_edit_shape"
        android:orientation="vertical"
        android:layout_margin="25dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dip">
            <TextView
                android:text="账号"
                android:textSize="15sp"
                style="@style/txt_black_14" />
            <EditText
                android:id="@+id/nameEdt"
                android:textColor="@color/hard_gray"
                android:hint="手机号"
                android:layout_marginLeft="10dip"
                android:textSize="15sp"
                android:background="@null"
                android:textColorHint="@color/normal_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/normal_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dip">
            <TextView
                android:text="密码"
                android:textSize="15sp"
                style="@style/txt_black_14" />
            <EditText
                android:id="@+id/psdEdt"
                android:textColor="@color/hard_gray"
                android:hint="密码"
                android:layout_marginLeft="10dip"
                android:textSize="15sp"
                android:background="@null"
                android:textColorHint="@color/normal_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/loginBtn"
        android:layout_below="@+id/edtLayout"
        android:background="@drawable/at_blue_btn_selector"
        android:text="登  录"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginLeft="24dip"
        android:layout_marginRight="24dip"
        android:layout_width="match_parent"
        android:layout_height="50dip" />
</RelativeLayout>
