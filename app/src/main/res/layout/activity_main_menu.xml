<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainMenuAct">
    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_above="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/menu_level2_layout"
        android:orientation="horizontal"
        android:layout_above="@id/bottomLayout"
        android:background="@drawable/shape_menu_level2"
        android:layout_width="match_parent"
        android:layout_height="40dip">
        <TextView
            android:id="@+id/menu_btn21"
            android:layout_weight="1"
            android:gravity="center"
            android:text="水文站点"
            android:layout_height="match_parent"
            android:drawablePadding="5dip"
            style="@style/txt_black_12" />
        <TextView
            android:id="@+id/menu_btn22"
            android:layout_weight="1"
            android:gravity="center"
            android:text="水质站"
            android:layout_height="match_parent"
            android:drawablePadding="5dip"
            style="@style/txt_black_12" />
        <TextView
            android:id="@+id/menu_btn23"
            android:layout_weight="1"
            android:gravity="center"
            android:text="饮水源"
            android:layout_height="match_parent"
            android:drawablePadding="5dip"
            style="@style/txt_black_12" />
        <TextView
            android:id="@+id/menu_btn24"
            android:layout_weight="1"
            android:gravity="center"
            android:text="应急资源"
            android:layout_height="match_parent"
            android:drawablePadding="5dip"
            style="@style/txt_black_12" />
        <TextView
            android:id="@+id/menu_btn25"
            android:layout_weight="1"
            android:gravity="center"
            android:text="重点风险源"
            android:layout_height="match_parent"
            android:drawablePadding="5dip"
            style="@style/txt_black_12" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/menu_leve13_layout"
        android:orientation="horizontal"
        android:layout_above="@id/bottomLayout"
        android:background="@drawable/shape_menu_level2"
        android:layout_width="match_parent"
        android:layout_height="40dip">
        <TextView
            android:id="@+id/menu_btn31"
            android:layout_weight="1"
            android:gravity="center"
            android:text="水质模拟"
            android:layout_height="match_parent"
            android:drawablePadding="5dip"
            style="@style/txt_black_12" />
        <TextView
            android:id="@+id/menu_btn32"
            android:layout_weight="1"
            android:gravity="center"
            android:text="区域通量"
            android:layout_height="match_parent"
            android:drawablePadding="5dip"
            style="@style/txt_black_12" />
        <TextView
            android:id="@+id/menu_btn33"
            android:layout_weight="1"
            android:gravity="center"
            android:text="通量超标预警"
            android:layout_height="match_parent"
            android:drawablePadding="5dip"
            style="@style/txt_black_12" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/menu_leve14_layout"
        android:orientation="horizontal"
        android:layout_above="@id/bottomLayout"
        android:background="@drawable/shape_menu_level2"
        android:layout_width="match_parent"
        android:layout_height="40dip">
        <TextView
            android:id="@+id/menu_btn41"
            android:layout_weight="1"
            android:gravity="center"
            android:text="危化品样式"
            android:layout_height="match_parent"
            android:drawablePadding="5dip"
            style="@style/txt_black_12" />
        <TextView
            android:id="@+id/menu_btn42"
            android:layout_weight="1"
            android:gravity="center"
            android:text="法律法规"
            android:layout_height="match_parent"
            android:drawablePadding="5dip"
            style="@style/txt_black_12" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/appBackground"
        android:paddingLeft="10dip"
        android:paddingTop="8dip"
        android:paddingBottom="6dip"
        android:paddingRight="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/menu_btn1"
            android:layout_weight="1"
            android:gravity="center"
            android:text="首页"
            android:drawablePadding="5dip"
            style="@style/txt_white_10"
            android:drawableTop="@drawable/selector_btn_home" />
        <TextView
            android:id="@+id/menu_btn2"
            android:layout_weight="1"
            android:gravity="center"
            android:text="专题数据"
            android:drawablePadding="5dip"
            style="@style/txt_white_10"
            android:drawableTop="@drawable/selector_btn_water" />
        <TextView
            android:id="@+id/menu_btn3"
            android:layout_weight="1"
            android:gravity="center"
            android:text="业务数据"
            android:drawablePadding="5dip"
            style="@style/txt_white_10"
            android:drawableTop="@drawable/selector_btn_air" />
        <TextView
            android:id="@+id/menu_btn5"
            android:layout_weight="1"
            android:gravity="center"
            android:text="法律法规"
            android:drawablePadding="5dip"
            style="@style/txt_white_10"
            android:drawableTop="@drawable/selector_btn_more" />
    </LinearLayout>
</RelativeLayout>
