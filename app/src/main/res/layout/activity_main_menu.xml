<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainMenuAct">
    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_above="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/appBackground"
        android:paddingLeft="10dip"
        android:paddingTop="8dip"
        android:paddingBottom="6dip"
        android:paddingRight="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/menu_btn1"
            android:layout_weight="1"
            android:gravity="center"
            android:text="基础地图"
            android:drawablePadding="5dip"
            style="@style/txt_white_10"
            android:drawableTop="@drawable/selector_btn_home" />
        <TextView
            android:id="@+id/menu_btn2"
            android:layout_weight="1"
            android:gravity="center"
            android:text="水文站"
            android:drawablePadding="5dip"
            style="@style/txt_white_10"
            android:drawableTop="@drawable/selector_btn_water" />
        <TextView
            android:id="@+id/menu_btn3"
            android:layout_weight="1"
            android:gravity="center"
            android:text="水质监测"
            android:drawablePadding="5dip"
            style="@style/txt_white_10"
            android:drawableTop="@drawable/selector_btn_air" />
        <TextView
            android:id="@+id/menu_btn4"
            android:layout_weight="1"
            android:gravity="center"
            android:text="污染源信息"
            android:drawablePadding="5dip"
            style="@style/txt_white_10"
            android:drawableTop="@drawable/selector_btn_pollute" />
        <TextView
            android:id="@+id/menu_btn5"
            android:layout_weight="1"
            android:gravity="center"
            android:text="法律法规"
            android:drawablePadding="5dip"
            style="@style/txt_white_10"
            android:drawableTop="@drawable/selector_btn_more" />
    </LinearLayout>
</RelativeLayout>
